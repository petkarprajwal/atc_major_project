# Environment variables for ATC AI System

# OpenSky Network API Configuration
OPENSKY_USERNAME=your_opensky_username
OPENSKY_PASSWORD=your_opensky_password
OPENSKY_BASE_URL=https://opensky-network.org/api

# OpenWeatherMap API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key
OPENWEATHER_BASE_URL=http://api.openweathermap.org/data/2.5

# AviationStack API Configuration (Real-time flight data)
AVIATIONSTACK_API_KEY=your_aviationstack_api_key
AVIATIONSTACK_BASE_URL=http://api.aviationstack.com/v1

# FlightAware AeroAPI Configuration (Professional flight tracking)
FLIGHTAWARE_API_KEY=your_flightaware_api_key
FLIGHTAWARE_USERNAME=your_flightaware_username
FLIGHTAWARE_BASE_URL=https://aeroapi.flightaware.com/aeroapi

# RapidAPI Configuration (Alternative aviation data)
RAPIDAPI_KEY=your_rapidapi_key
RAPIDAPI_HOST=aerodatabox.p.rapidapi.com

# Real-time WebSocket Configuration
WEBSOCKET_ENABLED=True
WEBSOCKET_PORT=8765

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO
UPDATE_INTERVAL=2  # seconds (faster for real-time)
CONFLICT_THRESHOLD=5  # miles
ALTITUDE_THRESHOLD=1000  # feet

# Dashboard Configuration
DASHBOARD_PORT=8501
DASHBOARD_HOST=localhost
